{
  "name": "passwd-sso",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --experimental-https",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "generate:key": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "licenses:check": "node scripts/check-licenses.mjs --name app --lockfile package-lock.json",
    "licenses:check:strict": "node scripts/check-licenses.mjs --name app --lockfile package-lock.json --strict",
    "licenses:check:ext": "node scripts/check-licenses.mjs --name extension --lockfile extension/package-lock.json",
    "licenses:check:ext:strict": "node scripts/check-licenses.mjs --name extension --lockfile extension/package-lock.json --strict",
    "test:load:seed": "node load-test/setup/seed-load-test-users.mjs",
    "test:load:cleanup": "node load-test/setup/seed-load-test-users.mjs --cleanup",
    "test:load:smoke": "node load-test/setup/seed-load-test-users.mjs --smoke",
    "test:load": "k6 run load-test/scenarios/mixed-workload.js",
    "test:load:health": "k6 run load-test/scenarios/health.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@swc/helpers": "0.5.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.4",
    "file-type": "^21.3.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.8.2",
    "next-themes": "^0.4.6",
    "otpauth": "^9.5.0",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "redis": "^4.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "jsdom": "^28.1.0",
    "prisma": "^7.3.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "qs": "6.14.2",
    "hono": "4.12.1",
    "lodash": "4.17.23"
  }
}
