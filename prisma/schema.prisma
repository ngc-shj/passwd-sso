generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Auth.js Required Models ────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─── Application Models ─────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Vault (E2E encryption) fields
  vaultSetupAt             DateTime? @map("vault_setup_at")
  accountSalt              String?   @map("account_salt") @db.VarChar(64)
  encryptedSecretKey       String?   @map("encrypted_secret_key") @db.Text
  secretKeyIv              String?   @map("secret_key_iv") @db.VarChar(24)
  secretKeyAuthTag         String?   @map("secret_key_auth_tag") @db.VarChar(32)
  masterPasswordServerHash String?   @map("master_password_server_hash") @db.Text
  masterPasswordServerSalt String?   @map("master_password_server_salt") @db.VarChar(64)
  keyVersion               Int       @default(0) @map("key_version")

  // HMAC(pepper, SHA-256(PBKDF2(passphrase, verifierSalt))) — 本人確認用、暗号鍵導出には使わない
  passphraseVerifierHmac    String?   @map("passphrase_verifier_hmac") @db.VarChar(64)
  passphraseVerifierVersion Int       @default(1) @map("passphrase_verifier_version")

  accounts   Account[]
  sessions   Session[]
  passwords  PasswordEntry[]
  tags       Tag[]
  vaultKeys  VaultKey[]

  // Organization relations
  orgMemberships      OrgMember[]
  orgInvitations      OrgInvitation[]
  createdOrgPasswords OrgPasswordEntry[]    @relation("orgPasswordCreator")
  updatedOrgPasswords OrgPasswordEntry[]    @relation("orgPasswordUpdater")
  orgPasswordFavorites OrgPasswordFavorite[]
  auditLogs            AuditLog[]
  passwordShares       PasswordShare[]
  attachments          Attachment[]

  // Emergency Access relations
  emergencyGrantsAsOwner   EmergencyAccessGrant[] @relation("emergencyGrantsAsOwner")
  emergencyGrantsAsGrantee EmergencyAccessGrant[] @relation("emergencyGrantsAsGrantee")

  // Extension tokens
  extensionTokens ExtensionToken[]

  @@map("users")
}

model ExtensionToken {
  id         String    @id @default(cuid())
  userId     String    @map("user_id")
  tokenHash  String    @unique @map("token_hash") @db.VarChar(64)
  scope      String    @db.VarChar(255)
  expiresAt  DateTime  @map("expires_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  revokedAt  DateTime? @map("revoked_at")
  lastUsedAt DateTime? @map("last_used_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, revokedAt])
  @@index([expiresAt])
  @@map("extension_tokens")
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String?
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  passwords PasswordEntry[]

  @@unique([name, userId])
  @@map("tags")
}

model VaultKey {
  id                     String   @id @default(cuid())
  userId                 String   @map("user_id")
  version                Int
  verificationCiphertext String   @map("verification_ciphertext") @db.Text
  verificationIv         String   @map("verification_iv") @db.VarChar(24)
  verificationAuthTag    String   @map("verification_auth_tag") @db.VarChar(32)
  createdAt              DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, version])
  @@map("vault_keys")
}

model PasswordEntry {
  id                String   @id @default(cuid())

  // E2E encrypted fields (all data encrypted client-side)
  encryptedBlob     String   @map("encrypted_blob") @db.Text
  blobIv            String   @map("blob_iv") @db.VarChar(24)
  blobAuthTag       String   @map("blob_auth_tag") @db.VarChar(32)
  encryptedOverview String   @map("encrypted_overview") @db.Text
  overviewIv        String   @map("overview_iv") @db.VarChar(24)
  overviewAuthTag   String   @map("overview_auth_tag") @db.VarChar(32)
  keyVersion        Int      @map("key_version")
  aadVersion        Int      @default(0) @map("aad_version")
  entryType         EntryType @default(LOGIN) @map("entry_type")

  // Metadata (unencrypted)
  isFavorite        Boolean  @default(false) @map("is_favorite")
  isArchived        Boolean  @default(false) @map("is_archived")
  deletedAt         DateTime? @map("deleted_at")

  userId            String   @map("user_id")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  tags        Tag[]
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  shares      PasswordShare[]   @relation("personalShares")
  attachments Attachment[]

  @@index([userId])
  @@map("password_entries")
}

// ─── Organization Models ────────────────────────────────────────

enum EntryType {
  LOGIN
  SECURE_NOTE
  CREDIT_CARD
  IDENTITY
  PASSKEY
}

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text

  // Server-side encryption: per-org key wrapped by ORG_MASTER_KEY
  encryptedOrgKey String @map("encrypted_org_key") @db.Text
  orgKeyIv        String @map("org_key_iv") @db.VarChar(24)
  orgKeyAuthTag   String @map("org_key_auth_tag") @db.VarChar(32)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  members     OrgMember[]
  passwords   OrgPasswordEntry[]
  tags        OrgTag[]
  invitations OrgInvitation[]
  auditLogs   AuditLog[]

  @@map("organizations")
}

model OrgMember {
  id     String  @id @default(cuid())
  orgId  String  @map("org_id")
  userId String  @map("user_id")
  role   OrgRole @default(MEMBER)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgId, userId])
  @@map("org_members")
}

model OrgPasswordEntry {
  id String @id @default(cuid())

  // Server-side encrypted fields (encrypted with per-org key)
  encryptedBlob String @map("encrypted_blob") @db.Text
  blobIv        String @map("blob_iv") @db.VarChar(24)
  blobAuthTag   String @map("blob_auth_tag") @db.VarChar(32)

  encryptedOverview String @map("encrypted_overview") @db.Text
  overviewIv        String @map("overview_iv") @db.VarChar(24)
  overviewAuthTag   String @map("overview_auth_tag") @db.VarChar(32)
  aadVersion        Int    @default(0) @map("aad_version")
  entryType         EntryType @default(LOGIN) @map("entry_type")

  // Metadata (unencrypted)
  isArchived Boolean   @default(false) @map("is_archived")
  deletedAt  DateTime? @map("deleted_at")

  orgId       String @map("org_id")
  createdById String @map("created_by_id")
  updatedById String @map("updated_by_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  org       Organization           @relation(fields: [orgId], references: [id], onDelete: Cascade)
  createdBy User                   @relation("orgPasswordCreator", fields: [createdById], references: [id])
  updatedBy User                   @relation("orgPasswordUpdater", fields: [updatedById], references: [id])
  tags        OrgTag[]
  favorites   OrgPasswordFavorite[]
  shares      PasswordShare[]       @relation("orgShares")
  attachments Attachment[]

  @@index([orgId])
  @@map("org_password_entries")
}

model OrgTag {
  id    String  @id @default(cuid())
  name  String
  color String?

  orgId String @map("org_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  org       Organization       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  passwords OrgPasswordEntry[]

  @@unique([name, orgId])
  @@map("org_tags")
}

model OrgPasswordFavorite {
  id                 String @id @default(cuid())
  userId             String @map("user_id")
  orgPasswordEntryId String @map("org_password_entry_id")

  createdAt DateTime @default(now()) @map("created_at")

  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  orgPasswordEntry OrgPasswordEntry @relation(fields: [orgPasswordEntryId], references: [id], onDelete: Cascade)

  @@unique([userId, orgPasswordEntryId])
  @@map("org_password_favorites")
}

model OrgInvitation {
  id        String           @id @default(cuid())
  orgId     String           @map("org_id")
  email     String
  role      OrgRole          @default(MEMBER)
  status    InvitationStatus @default(PENDING)
  token     String           @unique
  expiresAt DateTime         @map("expires_at")

  invitedById String @map("invited_by_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  org       Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  invitedBy User         @relation(fields: [invitedById], references: [id])

  @@map("org_invitations")
}

// ─── Share Link Models ─────────────────────────────────────────

model PasswordShare {
  id              String    @id @default(cuid())
  tokenHash       String    @unique @map("token_hash") @db.VarChar(64)
  entryType       EntryType @map("entry_type")
  encryptedData   String    @map("encrypted_data") @db.Text
  dataIv          String    @map("data_iv") @db.VarChar(24)
  dataAuthTag     String    @map("data_auth_tag") @db.VarChar(32)
  expiresAt       DateTime  @map("expires_at")
  maxViews        Int?      @map("max_views")
  viewCount       Int       @default(0) @map("view_count")
  revokedAt       DateTime? @map("revoked_at")
  createdById     String    @map("created_by_id")
  createdAt       DateTime  @default(now()) @map("created_at")

  passwordEntryId    String?          @map("password_entry_id")
  orgPasswordEntryId String?          @map("org_password_entry_id")

  createdBy        User              @relation(fields: [createdById], references: [id], onDelete: Cascade)
  passwordEntry    PasswordEntry?    @relation("personalShares", fields: [passwordEntryId], references: [id], onDelete: SetNull)
  orgPasswordEntry OrgPasswordEntry? @relation("orgShares", fields: [orgPasswordEntryId], references: [id], onDelete: SetNull)
  accessLogs       ShareAccessLog[]

  @@index([passwordEntryId])
  @@index([orgPasswordEntryId])
  @@index([expiresAt])
  @@map("password_shares")
}

model ShareAccessLog {
  id        String   @id @default(cuid())
  shareId   String   @map("share_id")
  ip        String?  @db.VarChar(45)
  userAgent String?  @map("user_agent") @db.VarChar(512)
  createdAt DateTime @default(now()) @map("created_at")

  share PasswordShare @relation(fields: [shareId], references: [id], onDelete: Cascade)

  @@index([shareId, createdAt])
  @@map("share_access_logs")
}

// ─── Audit Log Models ──────────────────────────────────────────

enum AuditAction {
  AUTH_LOGIN
  AUTH_LOGOUT
  ENTRY_BULK_ARCHIVE
  ENTRY_BULK_UNARCHIVE
  ENTRY_BULK_RESTORE
  ENTRY_BULK_TRASH
  ENTRY_EMPTY_TRASH
  ENTRY_IMPORT
  ENTRY_CREATE
  ENTRY_UPDATE
  ENTRY_DELETE
  ENTRY_TRASH
  ENTRY_PERMANENT_DELETE
  ENTRY_RESTORE
  ENTRY_EXPORT
  ATTACHMENT_UPLOAD
  ATTACHMENT_DELETE
  ORG_MEMBER_INVITE
  ORG_MEMBER_REMOVE
  ORG_ROLE_UPDATE
  SHARE_CREATE
  SHARE_REVOKE
  EMERGENCY_GRANT_CREATE
  EMERGENCY_GRANT_ACCEPT
  EMERGENCY_GRANT_REJECT
  EMERGENCY_GRANT_CONFIRM
  EMERGENCY_ACCESS_REQUEST
  EMERGENCY_ACCESS_ACTIVATE
  EMERGENCY_ACCESS_REVOKE
  EMERGENCY_VAULT_ACCESS
}

enum AuditScope {
  PERSONAL
  ORG
}

model AuditLog {
  id         String      @id @default(cuid())
  scope      AuditScope
  action     AuditAction
  userId     String      @map("user_id")
  orgId      String?     @map("org_id")
  targetType String?     @map("target_type")
  targetId   String?     @map("target_id")
  metadata   Json?
  ip         String?     @db.VarChar(45)
  userAgent  String?     @map("user_agent") @db.VarChar(512)
  createdAt  DateTime    @default(now()) @map("created_at")

  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  org  Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([orgId, createdAt])
  @@index([action])
  @@map("audit_logs")
}

// ─── Attachment Models ──────────────────────────────────────────

model Attachment {
  id            String   @id @default(cuid())
  filename      String   @db.VarChar(255)
  contentType   String   @map("content_type") @db.VarChar(100)
  sizeBytes     Int      @map("size_bytes")
  encryptedData Bytes    @map("encrypted_data")
  iv            String   @db.VarChar(24)
  authTag       String   @map("auth_tag") @db.VarChar(32)
  keyVersion    Int?     @map("key_version")
  aadVersion    Int      @default(0) @map("aad_version")

  passwordEntryId    String? @map("password_entry_id")
  orgPasswordEntryId String? @map("org_password_entry_id")
  createdById        String  @map("created_by_id")
  createdAt          DateTime @default(now()) @map("created_at")

  passwordEntry    PasswordEntry?    @relation(fields: [passwordEntryId], references: [id], onDelete: Cascade)
  orgPasswordEntry OrgPasswordEntry? @relation(fields: [orgPasswordEntryId], references: [id], onDelete: Cascade)
  createdBy        User              @relation(fields: [createdById], references: [id], onDelete: Cascade)

  @@index([passwordEntryId])
  @@index([orgPasswordEntryId])
  @@map("attachments")
}

// ─── Emergency Access Models ─────────────────────────────────

enum EmergencyAccessStatus {
  PENDING
  ACCEPTED
  IDLE
  STALE
  REQUESTED
  ACTIVATED
  REVOKED
  REJECTED
}

model EmergencyAccessGrant {
  id           String                @id @default(cuid())
  ownerId      String                @map("owner_id")
  granteeId    String?               @map("grantee_id")
  granteeEmail String                @map("grantee_email")
  status       EmergencyAccessStatus @default(PENDING)
  waitDays     Int                   @map("wait_days")

  tokenHash      String   @unique @map("token_hash") @db.VarChar(64)
  tokenExpiresAt DateTime @map("token_expires_at")

  // ECDH key exchange fields
  keyAlgorithm            String  @default("ECDH-P256") @map("key_algorithm") @db.VarChar(32)
  granteePublicKey        String? @map("grantee_public_key") @db.Text
  ownerEphemeralPublicKey String? @map("owner_ephemeral_public_key") @db.Text
  encryptedSecretKey      String? @map("encrypted_secret_key") @db.Text
  secretKeyIv             String? @map("secret_key_iv") @db.VarChar(24)
  secretKeyAuthTag        String? @map("secret_key_auth_tag") @db.VarChar(32)
  hkdfSalt                String? @map("hkdf_salt") @db.VarChar(64)
  wrapVersion             Int     @default(1) @map("wrap_version")
  keyVersion              Int?    @map("key_version")

  // ML-KEM fields (v2 PQC hybrid, nullable until migration)
  kemCiphertext  String? @map("kem_ciphertext") @db.Text
  kemPublicKey   String? @map("kem_public_key") @db.Text

  // Timestamps for state machine
  requestedAt   DateTime? @map("requested_at")
  activatedAt   DateTime? @map("activated_at")
  waitExpiresAt DateTime? @map("wait_expires_at")
  revokedAt     DateTime? @map("revoked_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  owner          User                    @relation("emergencyGrantsAsOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  grantee        User?                   @relation("emergencyGrantsAsGrantee", fields: [granteeId], references: [id], onDelete: SetNull)
  granteeKeyPair EmergencyAccessKeyPair?

  @@index([ownerId])
  @@index([granteeId])
  @@index([status])
  @@map("emergency_access_grants")
}

model EmergencyAccessKeyPair {
  id                  String @id @default(cuid())
  grantId             String @unique @map("grant_id")
  encryptedPrivateKey String @map("encrypted_private_key") @db.Text
  privateKeyIv        String @map("private_key_iv") @db.VarChar(24)
  privateKeyAuthTag   String @map("private_key_auth_tag") @db.VarChar(32)

  createdAt DateTime @default(now()) @map("created_at")

  grant EmergencyAccessGrant @relation(fields: [grantId], references: [id], onDelete: Cascade)

  @@map("emergency_access_key_pairs")
}
